{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "outDir": "./src", 
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,	
    "target": "es2018",
    "moduleResolution": "node",
    "lib": [ "es6", "dom","es2016" ],
    "skipLibCheck": true,
    "typeRoots":[
      "./node_modules/@types",
      "./ts_files/types/*"
    ]
  },
  "include": ["./ts_files/**/*"],
  "exclude": ["./ts_files/public/resources/topview/common/*/example", "./ts_files/public/resources/topview/doc/*", "./ts_files/public/resources/topview/lib/*",  "./ts_files/public/resources/topview/common/distribution_calc/emass_and_distribution.js"]
}
