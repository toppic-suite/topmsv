    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,	
    "target": "es2018",
    "moduleResolution": "node",
    "lib": [ "es6", "dom","es2016" ],
    "skipLibCheck": true,
  },
  "include": ["./public/js/**/*", "./public/resources/**/*"],
  "exclude": ["./ts_files/public/resources/topview/common/*/example", "./ts_files/public/resources/topview/doc/*", "./ts_files/public/resources/topview/lib/*"]
}
